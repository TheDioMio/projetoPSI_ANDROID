<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_apps"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- LOGO -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo_cores"
            android:contentDescription="@string/txt_logotipo_petpanion"
            android:layout_marginBottom="16dp" />

        <!-- TEXTO DE BOAS-VINDAS -->
        <TextView
            android:text="@string/bem_vindo_de_volta"
            android:textSize="22sp"
            android:textColor="#455A64"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:text="@string/a_nossa_prioridade_o_bem_estar_animal"
            android:textSize="16sp"
            android:textColor="#607D8B"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"/>

        <!-- ESTATÃSTICAS -->

        <LinearLayout style="@style/StatsCard">
            <TextView
                android:id="@+id/txtAnimalsAdopted"
                style="@style/StatsNumber"
                android:text="@string/txt_0"/>
            <TextView
                style="@style/StatsLabel"
                android:text="@string/txt_n_animais_encontraram_lar"/>
        </LinearLayout>

        <LinearLayout style="@style/StatsCard">
            <TextView
                android:id="@+id/txtActiveUsers"
                style="@style/StatsNumber"
                android:text="@string/txt_0"/>
            <TextView
                style="@style/StatsLabel"
                android:text="@string/txt_utilizadores_ativos_na_comunidade"/>
        </LinearLayout>

        <LinearLayout style="@style/StatsCard">
            <TextView
                android:id="@+id/txtAnimalsWaiting"
                style="@style/StatsNumber"
                android:text="@string/txt_0"/>
            <TextView
                style="@style/StatsLabel"
                android:text="@string/txt_animais_espera_de_um_novo_dono"/>
        </LinearLayout>

        <LinearLayout style="@style/StatsCard">
            <TextView
                android:id="@+id/txtActiveListings"
                style="@style/StatsNumber"
                android:text="@string/txt_0"/>
            <TextView
                style="@style/StatsLabel"
                android:text="@string/txt_anuncios_ativos_neste_momento"/>
        </LinearLayout>

        <LinearLayout style="@style/StatsCard">
            <TextView
                android:id="@+id/txtTotalViews"
                style="@style/StatsNumber.Views"
                android:text="@string/txt_0"/>
            <TextView
                style="@style/StatsLabel"
                android:text="@string/txt_visualizacaoes"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>

