<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_apps"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- LOGO -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo_cores"
            android:contentDescription="Log칩tipo PetPanion"
            android:layout_marginBottom="16dp" />

        <!-- TEXTO DE BOAS-VINDAS -->
        <TextView
            android:text="@string/bem_vindo_de_volta"
            android:textSize="22sp"
            android:textColor="#455A64"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:text="@string/a_nossa_prioridade_o_bem_estar_animal"
            android:textSize="16sp"
            android:textColor="#607D8B"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"/>

        <!-- ESTAT칈STICAS -->

        <LinearLayout style="@style/StatsCard">
            <TextView
                android:id="@+id/txtAnimalsAdopted"
                style="@style/StatsNumber"
                android:text="0"/>
            <TextView
                style="@style/StatsLabel"
                android:text="animais j치 encontraram um novo lar 游"/>
        </LinearLayout>

        <LinearLayout style="@style/StatsCard">
            <TextView
                android:id="@+id/txtActiveUsers"
                style="@style/StatsNumber"
                android:text="0"/>
            <TextView
                style="@style/StatsLabel"
                android:text="utilizadores ativos na comunidade 游논"/>
        </LinearLayout>

        <LinearLayout style="@style/StatsCard">
            <TextView
                android:id="@+id/txtAnimalsWaiting"
                style="@style/StatsNumber"
                android:text="0"/>
            <TextView
                style="@style/StatsLabel"
                android:text="animais  espera de um novo dono 仇벒잺"/>
        </LinearLayout>

        <LinearLayout style="@style/StatsCard">
            <TextView
                android:id="@+id/txtActiveListings"
                style="@style/StatsNumber"
                android:text="0"/>
            <TextView
                style="@style/StatsLabel"
                android:text="an칰ncios ativos neste momento 游닉"/>
        </LinearLayout>

        <LinearLayout style="@style/StatsCard">
            <TextView
                android:id="@+id/txtTotalViews"
                style="@style/StatsNumber.Views"
                android:text="0"/>
            <TextView
                style="@style/StatsLabel"
                android:text="visualiza칞칫es geradas nos nossos an칰ncios 游"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>


