<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Card base das estatísticas -->
    <style name="StatsCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:background">@drawable/bg_stats_card</item>
    </style>

    <!-- Número em destaque -->
    <style name="StatsNumber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2E7D32</item>
    </style>

    <!-- label -->
    <style name="StatsLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#546E7A</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Variante para visualizações -->
    <style name="StatsNumber.Views">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#F9A825</item>
    </style>



</resources>